@model AvaliaFatec.Models.Pergunta

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Confirmação de Exclusão</h4>
                </div>
                <div class="card-body">
                    <p class="fw-bold text-danger">
                        Tem certeza que deseja excluir esta pergunta?
                    </p>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 mb-3">
                            @Html.DisplayNameFor(model => model.Conteudo)
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            @Html.DisplayFor(model => model.Conteudo)
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            @Html.DisplayNameFor(model => model.DataPostagem)
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            @Html.DisplayFor(model => model.DataPostagem)
                        </dd>

                        <dt class="col-sm-4 mb-3">
                            @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between">
                             <a asp-action="TodasPerguntas" class="btn btn-secondary">
                                 <i class="bi bi-arrow-left"></i> Cancelar
                             </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Excluir
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
