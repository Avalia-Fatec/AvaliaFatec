@model AvaliaFatec.Models.UserRole;
@{
    ViewData["Title"] = "Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<section class="meu-container">
    <div class="form-geral formulario">
        <h4>Criar Role</h4>

        <form method="post" asp-action="CreateRole">
            <div asp-validation-summary="ModelOnly" class="text-danger-2"></div>

            <div class="form-group-2">
                <label asp-for="RoleName" class="control-label-2"></label>
                <input asp-for="RoleName" class="form-control-2" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>

            <div class="button-group-2">
                <button type="submit" class="enviar">Enviar</button>
                <button type="reset" class="limpar">Limpar</button>
            </div>

            <div class="mt-3">
                <a asp-action="ListarRoles" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar à Lista
                </a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
