@model AvaliaFatec.Models.ApplicationRole

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Confirmação de Exclusão de Role";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Confirmação de Exclusão</h4>
                </div>
                <div class="card-body">
                    <p class="fw-bold text-danger">
                        Tem certeza que deseja excluir esta role?
                    </p>

                    <dl class="row mb-4">
                        <dt class="col-sm-4 mb-3">
                            @Html.DisplayNameFor(model => model.RoleName)
                        </dt>
                        <dd class="col-sm-8 mb-3">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                    </dl>

                    <form asp-action="DeleteRole" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex justify-content-between">
                            <a asp-action="ListarRoles" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>

                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Excluir
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
