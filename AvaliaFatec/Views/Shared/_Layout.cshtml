<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AvaliaFatec</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/cadastro.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/logar.css" asp-append-version="true" />
    <script src="~/js/site.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-danger px-4">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">AvaliaFatec</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse justify-content-end" id="mainNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>

                    @if (User?.Identity?.IsAuthenticated ?? false)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Coordenadores" asp-action="Create">Cadastrar Coordenadores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Perguntas" asp-action="Index">Cadastrar Perguntas</a>
                        </li>
                        <li class="nav-item d-flex align-items-center text-white mx-2">
                            <span>Olá, <strong>@User.Identity.Name</strong></span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i> Sair
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Entrar</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
        <div class="endereco">
            <p>Endereço</p>
            <p>Rua Frei Galvão, s/n</p>
            <p>Jardim Pedro Ometto</p>
            <p>Jaú - SP, 17212-599</p>
        </div>
        <div class="contato">
            <p>Contato</p>
            <p>+55 14 3622-8280</p>
            <p>f020dir@cps.sp.gov.br</p>
        </div>
        <img src="@Url.Content("~/img/logo_brasao.png")" alt="Logo" />
    </footer>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
